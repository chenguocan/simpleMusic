/* pages/index/index.wxss */
.banner{
  width: 100%;
  height: 300rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
/*导航栏*/
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  background:#0089A7 ;
  border-radius: 50%;
  line-height: 100rpx;
  font-size: 50rpx;
  text-align: center;
  color:white;
}
.navItem text{
  font-size: 32rpx;
  margin-top:20rpx;
}
.recommendContainer{
  padding:20rpx;
  font-size: 32rpx;
}

/*推荐歌曲*/
.recommendContainer .header .title{
  color:#666;
}

.recommendContainer .header .more{
  float: right;
  border:1px solid #666;
  font-size: 28rpx;
  padding: 8rpx;
  border-radius: 30rpx;
}
.scrollContainer{
  display: flex;
  margin-top: 30rpx;
}
.scrollContainer .scrollItem{
  width: 30%;
}
.scrollContainer .scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollContainer .scrollItem text{
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
}